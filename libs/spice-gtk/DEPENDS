depends gst-plugins-base
depends gtk+-3
depends spice
depends libsoup
depends usbutils
depends json-glib
depends intltool

optional_depends cyrus-sasl \
                 "--with-sasl" \
                 "--without-sasl" \
                 "for SASL authentication support"

optional_depends dbus-glib \
                 "--enable-dbus=yes" \
                 "--enable-dbus=no" \
                 "for desktop integration support"

optional_depends polkit \
                 "--enable-polkit=yes" \
                 "--enable-polkit=no" \
                 "for polkit policy support"

optional_depends pulseaudio \
                 "--enable-pulse=yes" \
                 "--enable-pulse=no" \
                 "for pulseaudio support"

optional_depends celt051 \
                 "--enable-celt051=yes" \
                 "--enable-celt051=no" \
                 "for celt audio communication support"

optional_depends libcacard \
                 "--enable-smartcard=yes" \
                 "--enable-smartcard=no" \
                 "for smartcard support"

optional_depends usbredir \
                 "--enable-usbredir=yes" \
                 "--enable-usbredir=no" \
                 "for USB redirection support"

optional_depends vala \
                 "--enable-vala=yes --enable-introspection=yes" \
                 "--enable-vala=no --enable-introspection=no" \
                 "for vala support (needed by virt-management tools)" \
                 "y"

optional_depends lz4 \
                 "--enable-lz4=yes" \
                 "--enable-lz4=no" \
                 "for LZ4 compression support"

optional_depends gtk-doc \
                 "--enable-gtk-doc" \
                 "--disable-gtk-doc" \
                 "for building documentation"

optional_depends opus \
                 "--enable-opus" \
                 "--disable-opus" \
                 "for opus audio codecing format support"
